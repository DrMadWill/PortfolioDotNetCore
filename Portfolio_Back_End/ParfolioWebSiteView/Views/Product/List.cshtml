@{
    Layout = null;

    bool login = true;
    if (User.Identity.IsAuthenticated)
    {
        login = false;
    }
}
@{
    string namesss = "@sweetalert2";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="//cdn.jsdelivr.net/npm/@namesss/theme-dark@4/dark.css" rel="stylesheet">
    <style>
        .fa-cart-arrow-down {
            font-size: 1.5rem;
        }

        #baketCountType {
            position: absolute;
            right: 4px;
            top: -13px;
            color: red;
            font-weight: bold;
            font-size: 20px;
            background: burlywood;
            border-radius: 12px;
        }

        img {
            width: 150px;
            height: 150px;
        }
    </style>

</head>

<body>
    <header>

        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Navbar</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/Product/index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Product/SealList">Seal List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Product/List" style="position: relative;">
                                    <i class="fa-solid fa-cart-arrow-down"></i> <span id="baketCountType">0</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        </div>
    </header>

    <section>
        <div class="container">

            <div class="row">
                <table class="table" id="table">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Count</th>
                            <th scope="col">Price</th>
                            <th scope="col">Total Price</th>
                            <th scope="col">Buy</th>
                            <th scope="col">Remove</th>

                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/prodact/commun.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <script>


        let basketSale = document.getElementById("baketCountType");
        let table = document.getElementById("table");
        let newArray = JSON.parse(localStorage.getItem("product"));



        newArray.forEach(element => {
            let tr = document.createElement("tr");

            let html =
                `
                        <td>
                            <img src="${element.src}" alt="">
                        </td>

                        <td>
                            ${element.name}
                        </td>

                        <td>
                            ${element.count}
                        </td>

                        <td>
                            ${element.price}
                        </td>

                        <td>
                            ${parseInt(element.price * element.count)} azn
                        </td>

                        <td>
                            <input type="hidden" value="${element.id}" >
                            <input type="hidden" value="${element.count}" >
                            <button class="btn shop btn-success">
                                <i class="fas fa-shopping-basket"></i>
                            </button>
                        </td>

                    `


            let tdRemove = document.createElement("td");
            tdRemove.innerHTML = "<i class=\"fa-solid fa-trash\"></i>"

            tr.innerHTML = html


            tr.append(tdRemove);
            table.lastElementChild.append(tr);

            tdRemove.onclick = function () {
                if (confirm("Are You Sure Delete")) {
                    table.lastElementChild.removeChild(tr)
                    newArray.splice(newArray.indexOf(element))
                    localStorage.setItem("product", JSON.stringify(newArray))
                    BasketCount()
                }
            }
        });
    </script>


    <script>

        $(document).ready(() => {
            $(document).on('click', '.shop', (e) => {
                e.preventDefault();

                const countHtml = e.currentTarget.previousElementSibling
                const id = $(countHtml.previousElementSibling).val()
                let count = $(countHtml).val()

                if (@login) {
                    Swal.fire(
                        'Please Login',
                        '',
                        'error'
                    )
                    return;
                }

                Swal.fire({
                    title: 'Give me a second.',
                    text: '"',
                    imageUrl: 'https://media.giphy.com/media/xTkcEQACH24SMPxIQg/giphy.gif',
                    imageWidth: 400,
                    imageHeight: 350,
                    imageAlt: 'Loading',
                });


                $.ajax({
                    url: '/Product/Seal',
                    headers: {
                        "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                    },
                    type: 'POST',
                    data: { id: id, count: count },
                    success: (response) => {
                        if (response.hasOwnProperty('status') && response.status === 201) {
                            Swal.fire(
                                'Sealed',
                                '',
                                'success'
                            )
                            let newArray = JSON.parse(localStorage.getItem("product"));
                            let product = newArray.find(x => x.id == id);
                            newArray.splice(newArray.indexOf(product), 1);
                            localStorage.setItem("product", newArray)
                            BasketCount()
                        } else if (response.status == 400) {
                            Swal.fire(
                                'Not so much product',
                                '',
                                'error'
                            )
                        } else {
                            Swal.fire(
                                'Not Added',
                                '',
                                'error'
                            )
                        }
                    }
                })
            });


        });

    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

</body>

</html>