
@model Contact

@{
    ViewData["Location"] = "Account";
    ViewData["Title"] = "Contact";
}
@section header_link {
    <partial name="_AdminPanelHeaderLink" />
}

<div class="main-content-inner">
    <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
            <div class="card">
                <form class="card-body row" method="post">
                    <h4 class="header-title col-12">
                        Contact
                        @if (ViewBag.IsCreate)
                        {
                            <span>
                                Create
                            </span>
                        }
                        else
                        {
                            <span>
                                Edit
                            </span>
                        }

                    </h4>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <label asp-for="Email" class="col-form-label">Email</label>
                        <input class="form-control" type="email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger my-1"></span>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <label asp-for="PhoneNumber" class="col-form-label">Telephone</label>
                        <input class="form-control" type="tel" asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber" class="text-danger my-1"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Location" class="col-form-label">Location</label>
                        <input class="form-control" type="text" asp-for="Location">
                        <span asp-validation-for="Location" class="text-danger my-1"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Description">Description</label>
                        <textarea class="form-control" asp-for="Description" id="Description" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger my-1"></span>
                    </div>

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section footer_link{

    <partial name="_AdminPanelScripts" />
    <script src="https://cdn.ckeditor.com/ckeditor5/22.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>

    <partial name="_ValidationScriptsPartial" />
}

