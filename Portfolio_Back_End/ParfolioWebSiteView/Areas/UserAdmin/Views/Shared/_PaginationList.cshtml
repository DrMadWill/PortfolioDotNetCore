@model PaginationLinkModel


<ul class="pagination my-2">
    <li class="page-item  @(Model.HasPreviousPage?"":"disabled")">
        <a class="page-link  " href="@Model.Link/@(Model.PageIndex - 1)" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.PageIndex == i?"active":"")"><a class="page-link" href="@Model.Link/@i">@i</a></li>
    }
    <li class="page-item @(Model.HasNextPage?"":"disabled" )">
        <a class="page-link " href="@Model.Link/@(Model.PageIndex + 1)" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>