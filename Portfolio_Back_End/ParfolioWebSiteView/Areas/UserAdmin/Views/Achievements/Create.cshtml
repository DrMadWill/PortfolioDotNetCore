@model Achievements
@{
    ViewData["Location"] = "Achievement ";
    ViewData["Title"] = "Achievement";
}
}

@section header_link {

    <partial name="_AdminPanelHeaderLink" />
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-12 mt-5">
            <div asp-validation-summary="All"></div>
            <div class="card">
                <form class="card-body" method="post">

                    <h4 class="header-title">
                        Achievements

                        @if (ViewBag.IsCreate)
                        {
                            <span>Create</span>
                        }
                        else
                        {
                            <span>Update</span>
                        }

                    </h4>
                    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                    <div class="form-group">
                        <label asp-for="Name" class="col-form-label">Name</label>
                        <input class="form-control" type="text" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger my-1"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Icon" class="col-form-label">Icon</label>
                        <input class="form-control" type="text" placeholder="<i class='fas fa-award'></i>" asp-for="Icon">
                        <span asp-validation-for="Icon" class="text-danger my-1"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count">Percent</label>
                        <input class="form-control" type="number" asp-for="Count">
                        <span asp-validation-for="Count" class="text-danger my-1"></span>
                    </div>
                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Textual inputs end -->
    </div>
</div>

@section footer_link{
    <partial name="_AdminPanelScripts" />

    <partial name="_ValidationScriptsPartial" />
    
}